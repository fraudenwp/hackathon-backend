# Base Configuration
BASE_URL=http://localhost:8005
FRONTEND_BASE_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/resai

# Valkey (Redis-compatible) Configuration
VALKEY_WORKER_URL=redis://valkey-worker:6379

# Security Keys - CHANGE THESE IN PRODUCTION
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECRET_KEY_ENCRYPTION=your_encryption_key_here

# JWT Configuration
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080

# FAL.AI API Key
# Get from: https://fal.ai/dashboard/keys
FAL_API_KEY=your_fal_api_key_here

# Cloudflare R2 Configuration
# Get from: https://dash.cloudflare.com/
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_ACCOUNT_ID=your_r2_account_id
R2_BUCKET_NAME=your_bucket_name
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_REGION_NAME=auto

# LiveKit Configuration
# RECOMMENDED: Use LiveKit Cloud - Get from: https://cloud.livekit.io/
# Alternative: Run local LiveKit server (uncomment service in docker-compose.yml)
LIVEKIT_URL=https://your-project.livekit.cloud
LIVEKIT_WS_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Development Mode
DEVELOPMENT=false

# Port Configuration
WEB_PORT=8005
